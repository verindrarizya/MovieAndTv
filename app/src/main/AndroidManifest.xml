<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movieandtv">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieAndTv">
        <activity android:name=".ui.favorite.FavoriteActivity"></activity>
        <activity android:name=".ui.splash.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.tvshowdetail.TvShowDetailActivity"
            android:label="@string/title_activity_tv_show_detail"
            android:theme="@style/Theme.MovieAndTv.NoActionBar" />
        <activity
            android:name=".ui.moviedetail.MovieDetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:theme="@style/Theme.MovieAndTv.NoActionBar" />
        <activity android:name=".ui.home.HomeActivity" />
    </application>

</manifest>